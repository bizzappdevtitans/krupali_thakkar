<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

        <record id="teachres_details_tree" model="ir.ui.view">
            <field name="name">teacher.details.tree</field>
            <field name="model">teachers.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="teacher_name"/>
                    <field name="teacher_gender"/>
                    <field name="teacher_phone_number"/>
                    <field name="teacher_email"/>
                    <field name="course_field_id"/>
                    <field name="subject_ids" widget="many2many_tags"/>
                    <field name="experiance"/>

                </tree>
            </field>
        </record>

<!--Form View-->

        <record id="teachres_details_form" model="ir.ui.view">
            <field name="name">teachers.details.form</field>
            <field name="model">teachers.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_state_button" type="object" name="action_view_student" icon="fa-users" attrs="{'invisible':[('student_count','==',0)]}">
                                <field string="Students" name="student_count" widget="statinfo"/>
                            </button>

                             <button class="oe_state_button" type="object" name="action_view_subjects" icon="fa-book" attrs="{'invisible':[('subject_count','==',0)]}">
                                <field string="Subjects" name="subject_count" widget="statinfo"/>
                            </button>

                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="teacher_name"/>
                                <field name="teacher_gender" widget="radio"/>
                                <field name="teacher_phone_number"/>
                                <field name="teacher_email"/>
                            </group>

                            <group name="group_right">

                                <field name="course_field_id"/>
                                <field name="subject_ids" widget="many2many_tags" domain="[('course_field_id', '=', course_field_id)]"/>
                                <field name="experiance"/>
                                 <field name="student_ids" widget="many2many_tags" domain="[('course_field_id', '=', course_field_id)]"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


<!--Search View-->

        <record id="teachres_details_search" model="ir.ui.view">
            <field name="name">teacher.details.search</field>
            <field name="model">teachers.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="teacher_name"/>
                    <field name="teacher_gender"/>
                    <field name="course_field_id"/>
                    <field name="subject_ids" widget="many2many_tags"/>
                    <field name="experiance"/>
                    <filter name="group_course" string="By course" context="{'group_by': 'course_field_id'}"/>
                    <filter name="filter_male_teacher" string="Male Teacher" domain="[('teacher_gender','=','male')]"/>
                    <filter name="filter_female_teacher" string="Female Teacher" domain="[('teacher_gender','=','female')]"/>
                    <filter name="filter_experienced_teachers" string="experianced Teacher" domain="[('experiance','>=','2')]"/>
                </search>
            </field>
        </record>

<!--Action View-->

        <record id="action_teachers_details" model="ir.actions.act_window">
            <field name="name">teacher.details</field>
            <field name="res_model">teachers.details</field>
            <field name="view_mode">tree,form</field>
        </record>

    </odoo>


