<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

        <record id="activity_details_tree" model="ir.ui.view">
            <field name="name">activity.details.tree</field>
            <field name="model">activity.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="activity_id"/>
                    <field name="name"/>
                    <field name="fees"/>
                    <field name="student_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

<!--Form View-->

        <record id="activity_details_form" model="ir.ui.view">
            <field name="name">activity.details.form</field>
            <field name="model">activity.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="activity_id"/>
                            <field name="name"/>
                            <field name="fees"/>
                            <field name="student_ids" widget="many2many_tags"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--Action View-->

        <record id="action_activity_details" model="ir.actions.act_window">
            <field name="name">activities.details</field>
            <field name="res_model">activity.details</field>
            <field name="view_mode">tree,form</field>
        </record>
    </odoo>
