<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

        <record id="exam_details_tree" model="ir.ui.view">
            <field name="name">exam.details.tree</field>
            <field name="model">exam.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="exam_id"/>
                    <field name="name"/>
                    <field name="exam_date"/>
                    <field name="subject_ids"/>
                </tree>
            </field>
        </record>


<!--Form View-->

    <record id="exam_details_form" model="ir.ui.view">
        <field name="name">exam.details.form</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">

                        <button class="oe_state_button" type="object" name="action_view_student" icon="fa-users" attrs="{'invisible':[('student_count','==',0)]}">
                            <field string="Students" name="student_count" widget="statinfo"/>
                        </button>

                    </div>
                    <group>
                        <field name="exam_id"/>
                        <field name="name" placeholder="Enter exam name"/>
                        <field name="exam_date" options="{'datepicker':{'minDate': 'now'}}"/>
                        <field name="duration" placeholder="Enter exam duration"/>
                        <field name="exam_type"/>
                        <field name="course_ids"/>
                        <field name="subject_ids" domain="[('course_ids', '=', course_ids)]"/>
                        <field name="student_ids" domain="[('subject_ids', '=', subject_ids)]" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--Search View-->

        <record id="exam_details_search" model="ir.ui.view">
            <field name="name">exam.details.search</field>
            <field name="model">exam.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="exam_id"/>
                    <field name="name"/>
                    <field name="exam_date"/>
                    <field name="course_ids"/>
                    <field name="subject_ids"/>
                </search>
            </field>
        </record>


<!--Calender view -->

    <record id="Exam_details_calender" model="ir.ui.view">
        <field name="name">exam.details.calender</field>
        <field name="model">exam.details</field>
        <field name="arch" type="xml">
            <calendar date_start="exam_date">
                <field name="subject_ids"/>
            </calendar>
        </field>
    </record>



<!--Action View-->

        <record id="action_exam_details" model="ir.actions.act_window">
            <field name="name">exams.details</field>
            <field name="res_model">exam.details</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>

    </odoo>
