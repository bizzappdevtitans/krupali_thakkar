<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

    <record id="course_details_tree" model="ir.ui.view">
        <field name="name">course.details.tree</field>
        <field name="model">course.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="subject_ids" widget="many2many_tags"/>
                <field name="teacher_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

<!--Form View-->

    <record id="course_details_form" model="ir.ui.view">
        <field name="name">course.details.form</field>
        <field name="model">course.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <div class="oe_button_box" name="button_box">
                            <button class="oe_state_button" type="object" name="action_view_student" icon="fa-users" attrs="{'invisible':[('student_count','==',0)]}">
                                <field string="Students" name="student_count" widget="statinfo"/>
                            </button>

                            <button class="oe_state_button" type="object" name="action_view_subjects" icon="fa-book" attrs="{'invisible':[('subject_count','==',0)]}">
                                <field string="Subjects" name="subject_count" widget="statinfo"/>
                            </button>

                            <button class="oe_state_button" type="object" name="action_view_teacher" icon="fa-users" attrs="{'invisible':[('teachers_count','==',0)]}">
                                <field string="Teachers" name="teachers_count" widget="statinfo"/>
                            </button>
                        </div>
                    <group>
                        <field name="name" placeholder="Enter course name"/>
                        <field name="subject_ids" widget="many2many_tags"  domain="[('course_ids', '=', name)]"/>
                        <field name="teacher_ids" widget="many2many_tags"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--Search View-->

    <record id="course_details_search" model="ir.ui.view">
        <field name="name">course.details.search</field>
        <field name="model">course.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="subject_ids" widget="many2many_tags"/>
                <field name="student_ids" widget="many2many_tags"/>
                <field name="teacher_ids" widget="many2many_tags"/>

            </search>
        </field>
    </record>

<!--Action View-->

        <record id="action_course_details" model="ir.actions.act_window">
            <field name="name">courses.details</field>
            <field name="res_model">course.details</field>
            <field name="view_mode">tree,form</field>
        </record>

    </odoo>
