<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--kanban view-->

        <record id="library_details_kanban" model="ir.ui.view">
        <field name="model">library.details</field>
        <field name="arch" type="xml">

            <kanban default_group_by="course_id" class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create" quick_create_view="project.quick_create_task_form" archivable="false" default_order="borrow_date" examples="project" js_class="project_task_kanban" sample="1" create="0">
               <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                <!-- Title area ... -->
                                    <strong>
                                        <field name="image" widget="image"/>
                                    </strong>
                                </div>

                                <div class="o_kanban_record_body">
                                 <!-- Other content area ... -->
                                 <div>
                                        <strong>
                                            <field name="book_id"/>
                                        </strong>
                                    </div>
                                    <div>
                                        <strong>
                                            <field name="book_name"/>
                                        </strong>
                                    </div>

                                    <div>
                                        <field name="course_id"/>
                                    </div>



                                </div>

                                <div class="o_kanban_record_bottom">

                                    <div class="oe_kanban_bottom_left">

                                        <!-- Left side footer... -->
                                    </div>

                                    <div class="oe_kanban_bottom_right">
                                        <field name="average_rating"/>

                                        <!-- Right side footer... -->
                                    </div>
                                </div><!-- o_kanban_record_bottom -->

                                <div class="oe_clear"/>
                            </div>
                                <!-- oe_kanban_content -->
                            <div class="o_dropdown_kanban dropdown">
                                <!-- Top-right drop down menu ... -->
                                <a class="dropdown-toggle btn" role="button"
                                data-toggle="dropdown" title="Dropdown menu" href="#">
                                    <span class="fa fa-ellipsis-v" />
                                </a>

                                <div class="dropdown-menu" role="menu">
                                    <!-- Edit menu option -->
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit"
                                        class="dropdown-item">Edit</a>
                                    </t>

                                    <!-- Delete menu option -->
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete"
                                        class="dropdown-item">Delete</a>
                                    </t>
                                </div>
                            </div>
                        </div><!-- oe_kanban_global_click -->
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


<!--Form View-->

        <record id="library_details_form" model="ir.ui.view">
            <field name="name">library.details.form</field>
            <field name="model">library.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_state_button" type="object" name="action_view_student" icon="fa-users" attrs="{'invisible':[('student_count','==',0)]}">
                                <field string="Students" name="student_count" widget="statinfo"/>
                            </button>
                        </div>

                        <header>
                            <button id="button_return" name="action_return" string="Return Book" class="oe_edit_only oe_highlight" type="object" confirm="Please Remove the borrower name who returns a book"/>
                            <button id="button_borrow" name="action_borrow" string="Borrow Book" class="oe_edit_only oe_highlight" type="object" attrs="{'invisible' : [('number_of_book','=',0)]}" confirm="Please Enter the borrower name who borrows a book"/>
                            <field name="state" widget="statusbar"/>
                        </header>



                        <group name="group_top">
                            <group name="group_left">
                                <field name="book_id"/>
                                <field name="book_name"/>
                                <field name="is_available"/>
                                <field name="number_of_book"/>
                                 <field name="course_id"/>
                                <field name="student_ids" widget="many2many_tags" domain="[('course_ids', '=', course_id)]"/>
                            </group>

                            <group name="group_right">
                                <field name="image" widget="image" class="oe_avatar" placeholder="upload student Image"/>
                                <field name="average_rating"/>
                                <field name="borrow_date"/>
                                <field name="date_returned"/>

                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--Tree View-->

        <record id="library_details_tree" model="ir.ui.view">
            <field name="name">library.details.tree</field>
            <field name="model">library.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="book_id"/>
                    <field name="book_name"/>
                    <field name="is_available"/>
                    <field name="borrow_date"/>
                    <field name="date_returned"/>
                    <field name="average_rating"/>
                    <field name="course_id"/>
                    <field name="state" widget="badge" decoration-success="state == 'available'" decoration-danger="state == 'not_avalible'"/>
                    <field name="student_ids" widget="many2many_tags"/>
                    <field name="number_of_book"/>
                </tree>
            </field>
        </record>

<!--Pivot view-->
        <record id="library_details_pivot" model="ir.ui.view">
            <field name="name">library.details.pivot</field>
            <field name="model">library.details</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="course_id" type="col"/>
                    <field name="book_name"/>
                    <field name="borrow_date" interval="week" />
                    <field name="average_rating" type="measure" />
                </pivot>
            </field>
        </record>

<!--Graph View-->

        <record id="library_details_graph" model="ir.ui.view">
            <field name="name">library.details.graph</field>
            <field name="model">library.details</field>
            <field name="arch" type="xml">
                <graph string="Books" type="bar">
                    <field name="average_rating"/>
                    <field name="course_id" operator="*"/>
                </graph>
            </field>
        </record>

<!--Search View-->

        <record id="library_details_search" model="ir.ui.view">
            <field name="name">library.details.search</field>
            <field name="model">library.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="book_id"/>
                    <field name="book_name"/>
                    <field name="average_rating"/>
                    <field name="course_id"/>
                    <field name="state"/>
                    <field name="student_ids"/>
                </search>
            </field>
        </record>

<!--Action Menu-->

        <record id="action_library_details" model="ir.actions.act_window">
            <field name="name">library.detail</field>
            <field name="res_model">library.details</field>
            <field name="view_mode">kanban,tree,form,pivot,graph</field>
        </record>

    </odoo>
