<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

        <record id="subject_details_tree" model="ir.ui.view">
            <field name="name">subject.details.tree</field>
            <field name="model">subject.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="subject_name"/>
                    <field name="course_field_id"/>
                    <field name="teacher_field_id" widget="many2many_tags"/>
                    <field name="student_field_id" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

<!--Form View-->

        <record id="subject_details_form" model="ir.ui.view">
            <field name="name">subject.details</field>
            <field name="model">subject.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_state_button" type="object" name="action_view_student" icon="fa-users">
                                <field string="Students" name="student_count" widget="statinfo"/>
                            </button>

                            <button class="oe_state_button" type="object" name="action_view_teacher" icon="fa-users">
                                <field string="Teachers" name="teachers_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="subject_name"/>
                            <field name="course_field_id"/>
                            <field name="teacher_field_id"/>
                            <field name="student_field_id"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--Action View-->
        <record id="action_subject_details" model="ir.actions.act_window">
            <field name="name">subjects.details</field>
            <field name="res_model">subject.details</field>
            <field name="view_mode">tree,form</field>
        </record>

        </odoo>
