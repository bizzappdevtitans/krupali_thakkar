<?xml version="1.0" encoding="utf-8"?>
    <odoo>

<!--Tree View-->

    <record id="student_details_tree" model="ir.ui.view">
            <field name="name">student.details.tree</field>
            <field name="model">student.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="student_name"/>
                    <field name="gender"/>
                    <field name="birth_date"/>
                    <field name="student_age"/>
                    <field name="father_name"/>
                    <field name="mother_name"/>
                    <field name="student_phone"/>
                    <field name="student_image"/>
                    <field name="teacher_field_id" widget="many2many_tags"/>
                    <field name="subject_field_id" widget="many2many_tags"/>
                    <field name="course_field_id"/>
                    <field name="student_email" widget="email"/>
                </tree>
            </field>
        </record>

<!--Form View-->

    <record id="student_details_form" model="ir.ui.view">
        <field name="name">student.details.form</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_state_button" type="object" name="action_view_teacher" icon="fa-users">
                            <field string="Teachers" name="teachers_count" widget="statinfo"/>
                        </button>

                        <button class="oe_state_button" type="object" name="action_view_subjects" icon="fa-users">
                            <field string="Subjects" name="subject_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="student_name"/>
                        <field name="gender" widget="radio"/>
                        <field name="birth_date"/>
                        <field name="student_age"/>
                        <field name="father_name"/>
                        <field name="mother_name"/>
                        <field name="student_phone"/>
                        <field name="student_image"/>
                        <field name="teacher_field_id"/>
                        <field name="subject_field_id"/>
                        <field name="course_field_id"/>
                        <field name="student_email" widget="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--Action View-->

        <record id="action_student_details" model="ir.actions.act_window">
            <field name="name">students.details</field>
            <field name="res_model">student.details</field>
            <field name="view_mode">tree,form</field>
        </record>

    </odoo>
