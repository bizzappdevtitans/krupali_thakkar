<?xml version="1.0" encoding="utf-8"?>
    <odoo>
<!--Form View-->

        <record id="book_borrower_form" model="ir.ui.view">
            <field name="name">borrower.details.form</field>
            <field name="model">borrower.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button class="oe_state_button" type="object" name="action_view_book" icon="fa-book">
                            <field string="Books" name="book_count" widget="statinfo"/>
                        </button>



                    </div>
                        <group>
                            <field name="borrower_ids"/>
                            <field name="borrowername"/>

                        </group>
                        <notebook>
                            <page string="Book Details">
                            <!-- you can display child data like code below -->
                                <field name="book_field_id"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

<!--Tree View-->

        <record id="borrower_details_tree" model="ir.ui.view">
            <field name="name">borrower.details.tree</field>
            <field name="model">borrower.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="borrowername"/>
                     <field name="book_field_id" widget="many2many_tags"/>

                </tree>
            </field>
        </record>

<!--Action View-->

        <record id="action_borrower_details" model="ir.actions.act_window">
            <field name="name">borrower.detail</field>
            <field name="res_model">borrower.details</field>
            <field name="view_mode">tree,form</field>
        </record>
    </odoo>
